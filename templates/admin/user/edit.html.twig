{% extends 'admin-base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="app-wrapper">
    
	    <div class="app-content pt-3 p-md-3 p-lg-4">
		    <div class="container-xl">
                <div class="row g-3 mb-4 align-items-center justify-content-center">
			        <h1 class="app-page-title mb-0 text-center">Modifier cet utilisateur</h1>
                    <div class="col-sm-6">
                        <div class="app-card app-card-settings shadow-sm p-4">
                            <div class="app-card">
                            {{ form_start(editForm, {'attr': {'novalidate': 'novalidate'}}) }}
                                <div class="mb-3">
                                    {{ form_row(editForm.roles)}}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(editForm.actif)}}
                                </div>
                                <div class="mb-3">
                                    <button class="btn app-btn-primary">{{ button_label|default('Enregistrer les modifications') }}</button>
                                </div>
                            {{ form_end(editForm) }}
                            {{ include('admin/user/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
