{% extends 'admin-base.html.twig' %}

{% block title %}Détail de l'audio{% endblock %}

{% block body %}
    <div class="app-wrapper">
	    
	    <div class="app-content pt-3 p-md-3 p-lg-4">
		    <div class="container-xl">
			    
			    <div class="row g-3 mb-4 align-items-center justify-content-between">
				    <div class="col-auto">
			            <h1 class="app-page-title mb-0">Détail</h1>
				    </div>
                </div>

                <div class="tab-content">
                    <div class="tab-pane fade show active">
                        <div class="app-card app-card-orders-table shadow-sm mb-5">
                            <div class="app-card-body">
                                <div class="table-responsive">
                                    <table class="table app-table-hover mb-0 text-left">
                                        <tbody>
                                            <tr>
                                                <th class="cell">Référence</th>
                                                <td class="cell">#{{ audio.id }}</td>
                                            </tr>
                                            <tr>
                                                <th class="cell">Fichier</th>
                                                <td class="cell">{{ audio.file }}</td>
                                            </tr>
                                            <tr>
                                                <th class="cell">Auteur</th>
                                                <td class="cell">{{ audio.user.name }}</td>
                                            </tr>
                                            <tr>
                                                <th class="cell">Genre</th>
                                                <td class="cell">
                                                    {% for type in audio.type %}
                                                        <span> {{type}} </span><br>
                                                    {% endfor %}
                                                </td>
                                            </tr>
                                            <tr>
                                                <th class="cell">Description</th>
                                                <td class="cell">#{{ audio.description }}</td>
                                            </tr>
                                                <th class="cell">Date d'ajout'</th>
                                                <td class="cell">{{ audio.createdAt ? audio.createdAt|date('d/m/Y, H:i') : '' }}</td>
                                            </tr>
                                            <tr>
                                                <th class="cell">Dernière modification</th>
                                                <td class="cell">{{ audio.modifiedAt ? audio.modifiedAt|date('d/m/Y, H:i') : '' }}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <div class="container mt-3">
                                        <div class="row">
                                            <div class="col-auto">
                                                <a class="btn app-btn-secondary" href="{{ path('audio_edit', {'id': audio.id}) }}">Modifier</a>
                                            </div>
                                            <div class="col-auto">
                                                {{ include('audio/_delete_form.html.twig') }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
