                <th>Modified_at</th>
                <td>{{ avatar.modifiedAt ? avatar.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('avatar_index') }}">back to list</a>

