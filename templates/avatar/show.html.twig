{% extends 'base.html.twig' %}

{% block title %}Avatar{% endblock %}

{% block body %}
    <h1>Avatar</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ avatar.id }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ avatar.file }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ avatar.createdAt ? avatar.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
