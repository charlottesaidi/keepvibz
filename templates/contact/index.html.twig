{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
<section class="contact">
    <h1>Contact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_user</th>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.idUser }}</td>
                <td>{{ contact.Name }}</td>
                <td>{{ contact.Email }}</td>
                <td>{{ contact.Subject }}</td>
                <td>{{ contact.Message }}</td>
                <td>
                    <a href="{{ path('contact_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('contact_new') }}">Create new</a>
    </section>
{% endblock %}
