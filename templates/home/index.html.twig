{% extends 'base.html.twig' %}

{% block title %}KeepVibz | Ensemble on est plus fort !{% endblock %}

{% block body %}
    {# SECTION 1 #}
    <section id="section_1" class="section_home_1">
        <div class="background_1">
            <img class="gif_background" src="{{asset('assets/images/background/fond_projet_png.png')}}" alt="image animé en fond d'ecran">
            <div class="gradient"></div>
        </div>
        <div class="background_2">
            <img class="background" src="{{asset('assets/images/background/fond_responsive.jpg')}}" alt="image en fond d'ecran">
            <div class="gradient"></div>
        </div>
            {# PLAYER #}
            <div class="block_player tchv">
                <div class="content_player">
                    <div class="top_block_accroche">
                        <h2 class="accroche">"Ensemble <span>on est plus fort !</span>"</h2>
                    </div>
                    <h2 class="latest_upload">Derniers uploads</h2>
                    <audio preload controls>
                        <source src="http://generationfm.ice.infomaniak.ch/generationfm-high.mp3" type="audio/mpeg">
                    </audio>
                    <h3 class="title_player">Titre (Artiste - BPM)</h3>
                </div>
            </div>
    </section>
    {# FIN SECTION 1 #}

    {# SECTION 2 #}
    <section id="section_2" class="section_home_2">
        <div class="wrap4">
            <h2 id="most_popular" class="most_downloads">Les plus populaires</h2>
                <div class="flexslider carousel">
                {# CUSTOM NAVIGATION #}
                <div class="custom-navigation">
                    <div class="paginate_button flex jcfe">
                            <a href="#" class="flex-prev"><img src="{{asset('assets/images/icons/arrow-92-64.png')}}" alt="icône de navigation (précédent)"></a>
                            <a href="#" class="flex-next"><img src="{{asset('assets/images/icons/arrow-28-64.png')}}" alt="icône de navigation (suivant)"></a>
                    </div>
                </div>
                {# CUSTOM NAVIGATION #}
                    <ul class="slides">
                        {% for beat in instrus %}
                        <li class="content_download flex col">
                            <audio preload src="http://generationfm.ice.infomaniak.ch/generationfm-high.mp3" controls id="player_1"></audio>
                            <div class="image_downloaded">
                                <a href="{{path('instru_show', {'id': beat.id})}}">
                                    <img class="img_downloaded" src="{{ asset('uploads/images/instrus/' ~ beat.image) }}" alt="{{ beat.title }}">
                                </a>
                            </div>
                            <div class="btn_play_caroussel btn">
                                    <img class="img_play_caroussel" src="{{asset('assets/images/icons/play.png')}}" alt="">
                            </div>
                            <div class="block_info_instrus flex col">
                                <h4 class="title_downloaded">Titre : <span class="span_downloaded">{{ beat.title }}</span></h4>
                                <h4 class="genre_downloaded">Genre : <span class="span_downloaded">
                                {% for genre in beat.genre %}
                                    {{ genre }}
                                {% endfor %}
                                </span></h4>
                                <h4 class="description_downloaded">Key : <span class="span_downloaded">{{ beat.cle }}</span> - <span class="span_downloaded">{{ beat.bpm }}</span> BPM</h4>
                            </div>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
        </div>
    </section>
    {# FIN SECTION 2 #}
{% endblock %}