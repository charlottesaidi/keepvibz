{% if paginator.numPages > 1 %}
    <ul class="pagination d-flex justify-content-center">
        {% if paginator.prevUrl %}
            <li><a class="p-1" href="{{ paginator.prevUrl }}">&laquo; </a></li>
        {% endif %}

        {% for page in paginator.pages %}
            {% if page.url %}
                <li {{ page.isCurrent ? 'class="active"' : '' }}><a class="p-1" href="{{ page.url }}">{{ page.num }}</a></li>
            {% else %}
                <li class="disabled"><span class="p-1">{{ page.num }}</span></li>
            {% endif %}
        {% endfor %}

        {% if paginator.nextUrl %}
            <li><a class="p-1" href="{{ paginator.nextUrl }}"> &raquo;</a></li>
        {% endif %}
    </ul>
{% endif %}