{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('user-profile') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('user-profile') }}
{% endblock %}

{% block title %}KeepVibz | Profil{% endblock %}

{% block body %}

    <div class="main">
        <div class="side-nav">
            <nav>
                <ul>
                    <li>
                        <button href="#!" class="tablinks" id="prof-link">Profil</button>
                    </li>
                    <li>
                        <button href="#!" class="tablinks" id="instru-link">Mes Instrus</button>
                    </li>
                    <li>
                        <button href="#!" class="tablinks" id="top-link">Mes Toplines</button>
                    </li>
                    <li>
                        <button href="#!" class="tablinks" id="text-link">Mes Textes</button>
                    </li>
                </ul>
            </nav>
        </div>

        <div class="container">
            <div id="profil" class="tabcontent" style="display: block">
                <h2>Profil</h2>
                <div class="user-block">
                    {{ form_start(profileForm, {'attr': {'novalidate': 'novalidate'}}) }}

                    <h3>Photo de profil</h3>
                    <div class="attr-block avatar">
                        <div class="title-block">
                            {% if app.user.avatar %}
                                    <p class="avatar"><img src="{{asset('uploads/images/avatars/' ~ app.user.avatar.file)}}"> </p> 
                                {% else %}
                            {% endif %}
                        </div>
                        <div class="edit-button">
                            <a href="" class="btn-secondary formbuttons" id="avatar-button">Modifier</a>
                        </div>
                        <div class="edit-block formsection hidden" id="edit-avatar">
                            <div class="input-group">
                                {{form_widget(profileForm.avatar)}}
                            </div>
                            <div class="input-group">
                                <input type="submit" class="btn-primary" value="Valider">
                            </div>
                        </div>
                    </div>

                    <h3>Pseudo</h3>
                    <div class="attr-block name">
                        <div class="title-block">
                            <p> {{app.user.name}} </p>
                        </div>
                        <div class="edit-button">
                            <a href="" class="btn-secondary formbuttons" id="name-button">Modifier</a>
                        </div>
                        <div class="edit-block formsection hidden" id="edit-name">
                            <div class="input-group">
                                {{form_widget(profileForm.name)}}
                                {{form_errors(profileForm.name)}}
                            </div>
                            <div class="input-group">
                                <input type="submit" class="btn-primary" value="Valider">
                            </div>
                        </div>
                    </div>

                    <h3>Informations personnelles</h3>
                    <div class="global-attr-block">
                        <p>Adresse e-mail</p>
                        <div class="attr-block global email">
                            <div class="title-block">
                                <p> {{app.user.email}} </p>
                            </div>
                            <div class="edit-button">
                                <a href="" class="btn-secondary formbuttons" id="email-button">Modifier</a>
                            </div>
                            <div class="edit-block formsection hidden" id="edit-email">
                                <div class="input-group">
                                    {{form_widget(profileForm.email)}}
                                    {{form_errors(profileForm.email)}}
                                </div>
                                <div class="input-group">
                                    <input type="submit" class="btn-primary" value="Valider">
                                </div>
                            </div>
                        </div>
                        
                        <p>Ville</p>
                        <div class="attr-block global town">
                            <div class="title-block">
                                <p> {{app.user.town}} </p>
                            </div>
                            <div class="edit-button">
                                <a href="" class="btn-secondary formbuttons" id="town-button">Modifier</a>
                            </div>
                            <div class="edit-block formsection hidden" id="edit-town">
                                <div class="input-group">
                                    {{form_widget(profileForm.town)}}
                                    {{form_errors(profileForm.town)}}
                                </div>
                                <div class="input-group">
                                    <input type="submit" class="btn-primary" value="Valider">
                                </div>
                            </div>
                        </div>

                        <p>Téléphone</p>
                        <div class="attr-block global phone">
                            <div class="title-block">
                                <p> {{app.user.phone}} </p>
                            </div>
                            <div class="edit-button">
                                <a href="" class="btn-secondary formbuttons" id="phone-button">Modifier</a>
                            </div>
                            <div class="edit-block formsection hidden" id="edit-phone">
                                <div class="input-group">
                                    {{form_widget(profileForm.phone)}}
                                    {{form_errors(profileForm.phone)}}
                                </div>
                                <div class="input-group">
                                    <input type="submit" class="btn-primary" value="Valider">
                                </div>
                            </div>
                        </div>
                    </div>

                    <h3>A propos de moi</h3>
                    <div class="attr-block description">
                        <div class="title-block">
                            {% if app.user.bio %}
                                    <p> {{ app.user.bio|nl2br }} </p>  
                                {% else %}
                            {% endif %}
                        </div>
                        <div class="edit-button">
                            <a href="" class="btn-secondary formbuttons" id="desc-button">Modifier</a>
                        </div>
                        <div class="edit-block formsection hidden" id="edit-desc">
                            <div class="input-group">
                                {{form_widget(profileForm.bio, {'attr': {'placeholder': 'Courte description...'}})}}
                                {{form_errors(profileForm.bio)}}
                            </div>
                            <div class="input-group">
                                <input type="submit" class="btn-primary" value="Valider">
                            </div>
                        </div>
                    </div>

                    <h3>Activités sur le réseau</h3>
                    <div class="attr-block competence">
                        <div class="title-block">
                            {% if app.user.competences %}
                                    {% for competence in app.user.competences %}
                                        <p> {{competence.title}} </p>  
                                    {% endfor %}
                                {% else %}
                            {% endif %}
                        </div>
                        <div class="edit-button">
                            <a href="" class="btn-secondary formbuttons" id="competence-button">Modifier</a>
                        </div>
                        <div class="edit-block formsection hidden" id="edit-competence">
                            <div class="input-group">
                                <label for="competences">Ajouter des compétences</label>
                                {{form_widget(profileForm.competences)}}
                                {{form_errors(profileForm.competences)}}
                            </div>
                            <div class="input-group">
                                <input type="submit" class="btn-primary" value="Valider">
                            </div>
                        </div>
                    </div>

                    <h3>Paramètres</h3>
                    <div class="global-attr-block">
                        
                        <div class="attr-block global account">    
                            <div class="title-block">
                                <p> Modifier mon mot de passe </p>
                            </div>
                            <div class="edit-button">
                                <a href="" class="btn-secondary formbuttons" id="password-button">Modifier</a>
                            </div>
                            <div class="edit-block formsection hidden" id="edit-password">
                                <div class="input-group">
                                    <label for="old-password">Mot de passe actuel</label>
                                    {# {{form_widget(profileForm.oldPassword)}}
                                    {{form_errors(profileForm.oldPassword)}} #}
                                </div>
                                <div class="input-group">
                                    <label for="password">Nouveau mot de passe</label>
                                    {{form_widget(profileForm.newPassword.first)}}
                                    {{form_errors(profileForm.newPassword.first)}}
                                </div>
                                <div class="input-group">
                                    <label for="password">Confirmer</label>
                                    {{form_widget(profileForm.newPassword.second)}}
                                    {{form_errors(profileForm.newPassword.second)}}
                                </div>
                                <div class="input-group">
                                    <input type="submit" class="btn-primary" value="Valider">
                                </div>
                            </div>
                        </div>
                    {{ form_end(profileForm) }}

                        <div class="attr-block account">
                            <div class="title-block">
                                <p> Supprimer mon compte </p>
                            </div>
                            <div class="edit-button">
                                <a href="" class="btn-secondary formbuttons" id="delete-button">Supprimer</a>
                            </div>
                            <div class="delete-block formsection hidden" id="delete">
                                <form method="post" action="{{ path('auth_user_delete', {'id': app.user.id}) }}" onsubmit="return confirm('T'es sûr(e) de toi ? Supprimer ton compte est définitif.');">
                                    <div class="input-group">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app.user.id) }}">
                                    </div>
                                    <div class="input-group">
                                        <button class="btn btn-danger mb-3">Confirmer</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="instrus" class="tabcontent" style="display: none">
                <h2>Mes Instrus</h2>
                <div>
                    <a class="btn-secondary" href="{{ path('instrus_new') }}">Uploader un morceau</a>
                </div>
                <div class="listing">
                    {% for instru in app.user.instrus %}
                        <div>
                            {% if instru.deletedAt %}
                                <div class="warning">
                                    L'administrateur a retiré cette publication
                                </div>
                            {% endif %}
                            <div>
                            {% if instru.image %}
                                <img src="{{asset('uploads/images/instrus/' ~ instru.image)}}">
                            {% endif %}
                            </div>
                            <div>
                                <p><a href="" class="link">{{instru.title}}</a></p>
                                <p>{{ instru.createdAt ? instru.createdAt|date('d/m/Y', 'H:i') : '' }}</p>
                                {% for genre in instru.genre %}
                                    <p> {{genre}} </p>
                                {% endfor %}
                            </div>
                            <div> 
                            {% if instru.file %}
                                <audio preload src="{{asset('uploads/instrus/' ~ instru.file)}}" controls id="player_1"></audio>
                            {% endif %} 
                            </div>
                            <div> 
                                <a class="link" href="{{ path('instrus_edit', {'id': instru.id}) }}">Modifier</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div id="toplines" class="tabcontent" style="display: none">
                <h2>Mes Toplines</h2>
                <div>
                    <a class="btn-secondary" href="{{ path('toplines_new') }}">Uploader une topline</a>
                </div>
                <div class="listing">
                    {% for topline in app.user.toplines %}
                        <div>
                            {% if topline.deletedAt %}
                                <div class="warning">
                                    L'administrateur a retiré cette publication
                                </div>
                            {% endif %}
                            <div>
                                <p><a href="" class="link">{{topline.title}}</a></p>
                                {% for instru in topline.instrus %}
                                    <p> {{instrus.title}} </p>
                                {% endfor %}
                                <p>{{ topline.createdAt ? instru.createdAt|date('d/m/Y', 'H:i') : '' }}</p>
                            </div>
                            <div>  
                            {% if topline.file %}
                                <audio preload src="{{asset('uploads/toplines/' ~ topline.file)}}" controls id="player_1"></audio>
                            {% endif %}
                            </div>
                            <div>
                                <a class="link" href="{{ path('toplines_edit', {'id': instru.id}) }}">Modifier</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div id="textes" class="tabcontent" style="display: none">
                <h2>Mes Textes</h2>
                <div>
                    <a class="btn-secondary" href="{{ path('textes_new') }}">Publier un texte</a>
                </div>
                <div class="listing">
                    {% for texte in app.user.textes %}
                        <div>
                            {% if texte.deletedAt %}
                                <div class="warning">
                                    L'administrateur a retiré cette publication
                                </div>
                            {% endif %}
                            <p><a href="" class="">{{texte.title}}</a></p>
                            <p>
                                <span class="date">{{ texte.createdAt ? texte.createdAt|date('d/m/Y') : '' }}</span><br>
                                <span class="time">{{ texte.createdAt ? texte.createdAt|date('H:i') : '' }}</span>
                            </p>
                            <p>
                                {% if texte.instru %}
                                    {{texte.instru.title}}
                                {% endif %}
                            </p>
                            <a class="link" href="{{ path('textes_edit', {'id': texte.id}) }}">Modifier</a>
                        </div>
                    {% endfor %}
                </div>
            </div>

        </div>
    </div>

{% endblock %}